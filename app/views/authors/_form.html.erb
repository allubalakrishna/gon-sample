<%= form_tag authors_path do %>
 <% if @errors.present? %>
       <div id="error_explanation">
          <h2><%= pluralize(@errors.count, "error") %> prohibited this author from being saved:</h2>
         <ul>         
            <% @errors.keys.each do |index| %>
              <li><%= "Form-#{index.to_i+1}: #{@errors[index].join(', ')}" %></li>
            <% end %>
         </ul>
       </div>
    <% end %>
  <% @my_var.each_with_index do |author, index|%>
    <%= fields_for 'authors[]', author do |f| %>   
      <%= f.label :name %>
      <%= f.text_field :name, name: "authors[#{index}][name]" %>
      <%= f.label :country %>
      <%= f.text_field :country, name: "authors[#{index}][country]" %>
      <%= f.label :gender %>
      <%= f.text_field :gender, name: "authors[#{index}][gender]" %>
    <% end %>
    <br/>     
  <% end %>
     <div class="actions">
        <%= submit_tag %>
      </div>
<% end %>
<style>
  label{
    display: -webkit-inline-box !important;
  }
</style>